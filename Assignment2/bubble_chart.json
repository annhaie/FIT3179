{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "title": {
    "text": "Life Satisfaction vs Income (2020)"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/annhaie/FIT3179/main/gdp-vs-happiness-transformed.csv"
  },
  "params": [
    {
      "name": "Population_Above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 10000000000,
        "step": 1000000,
        "name": "Minimum Population: "
      }
    },
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels": [
          "Show All",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Continent Selection: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.Population > Population_Above"},
    {
      "filter": "Continent_selection == null || datum.Continent == Continent_selection"
    }
  ],
  "encoding": {
    "x": {
      "field": "Life satisfaction",
      "type": "quantitative",
      "axis": {"tickCount": 6},
      "title": "Life Satisfaction"
    },
    "y": {
      "field": "GDP per capita",
      "type": "quantitative",
      "axis": {"tickCount": 6},
      "title": "GDP Per Capita"
    }
  },
  "layer": [
    {
      "mark": {"type": "circle", "clip": true},
      "encoding": {
        "size": {
          "field": "Population",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [
              1000000,
              10000000,
              50000000,
              100000000,
              500000000,
              1000000000
            ],
            "range": [10, 50, 150, 200, 300, 400, 500]
          },
          "legend": {"format": ".1s"}
        },
        "color": {
          "field": "Continent",
          "type": "nominal",
          "scale": {
            "domain": [
              "North America",
              "South America",
              "Europe",
              "Africa",
              "Asia",
              "Oceania"
            ],
            "range": [
              "#e41a1c",
              "#984ea3",
              "#ff7f00",
              "#a6cee3",
              "#377eb8",
              "#a65628"
            ]
          }
        },
        "opacity": {"value": 0.6},
        "tooltip": [
          {"field": "Entity", "type": "nominal", "title": "Country"},
          {"field": "Life satisfaction", "type": "quantitative", "format": ","},
          {"field": "GDP per capita", "type": "quantitative", "format": ","},
          {"field": "Population", "type": "quantitative", "format": ","}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -13,
        "fontSize": 11,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "Entity", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Entity'] == 'Afghanistan' || datum ['Entity'] == 'China' || datum['Entity'] == 'Australia' || datum['Entity'] == 'Finland' || datum['Entity'] == 'Luxembourg' ||  datum['Entity'] == 'United States'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "Entity", "type": "nominal", "title": "Country"},
          {"field": "Life satisfaction", "type": "quantitative", "format": ","},
          {"field": "GDP per capita", "type": "quantitative", "format": ","},
          {"field": "Population", "type": "quantitative", "format": ","}
        ]
      }
    }
  ],
  "config": {"title": {"font": "sans-serif", "fontSize": 12}}
}
