{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/annhaie/FIT3179/main/happiness-cantril-ladder%20(1).csv"
  },
  "width": 800,
  "height": 400,
  "hconcat": [
    {
      "title": "Top 10 Countries With The Highest Life Satisfaction Rate",
      "transform": [
        {
          "window": [{"op": "rank", "as": "rank"}],
          "sort": [{"field": "LifeSatisfaction", "order": "descending"}]
        },
        {"filter": "datum.rank <= 10"},
        {"calculate": "datum.LifeSatisfaction", "as": "Life Satisfaction"}
      ],
      "mark": {"type": "bar"},
      "encoding": {
        "x": {"field": "Life Satisfaction", "type": "quantitative"},
        "y": {
          "field": "Entity",
          "title": "Country",
          "type": "nominal",
          "sort": {
            "field": "Life Satisfaction",
            "op": "average",
            "order": "descending"
          }
        },
        "color": {"value": "#4a7c59"}
      }
    },
    {
      "title": {
        "text": "Top 10 Countries With The Lowest Life Satisfaction Rate",
        "align": "center"
      },
      "transform": [
        {
          "window": [{"op": "rank", "as": "rank"}],
          "sort": [{"field": "LifeSatisfaction", "order": "descending"}]
        },
        {"filter": "datum.rank >= 157"},
        {"calculate": "datum.LifeSatisfaction", "as": "Life Satisfaction"}
      ],
      "mark": {"type": "bar"},
      "encoding": {
        "x": {"field": "Life Satisfaction", "type": "quantitative"},
        "y": {
          "field": "Entity",
          "title": "Country",
          "type": "nominal",
          "sort": {
            "field": "Life Satisfaction",
            "op": "average",
            "order": "descending"
          }
        },
        "color": {"value": "#c8d5b9"}
      }
    }
  ],
  "config": {"title": {"font": "sans-serif", "fontSize": 12}}
}